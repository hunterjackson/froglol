# Production Environment Configuration
# Copy this file to .env and update the values

# Generate a strong secret key with: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-long-random-string-in-production

# Database (SQLite by default, can change to PostgreSQL for production)
DATABASE_URL=sqlite:///instance/froglol.db

# Default search fallback
DEFAULT_FALLBACK_URL=https://www.google.com/search?q=%s

# Fuzzy matching settings
FUZZY_MATCH_THRESHOLD=60
FUZZY_MATCH_LIMIT=3

# Gunicorn settings (override in docker-compose.yml if needed)
GUNICORN_WORKERS=2
GUNICORN_TIMEOUT=30
